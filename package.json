{
  "name": "notaro-monorepo",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev:desktop": "pnpm --filter notaro-desktop dev",
    "dev:web": "pnpm --filter notaro-web dev",
    "build:desktop": "pnpm --filter notaro-desktop build",
    "build:web": "pnpm --filter notaro-web build",
    "tauri": "pnpm --filter notaro-desktop exec tauri",
    "format": "pnpm format:js && pnpm format:rust && pnpm format:dart",
    "format:js": "prettier --write .",
    "format:rust": "cargo fmt --all",
    "format:dart": "pnpm --filter notaro_mobile format",
    "lint": "pnpm lint:js && pnpm lint:rust && pnpm lint:dart",
    "lint:js": "pnpm --filter \"./apps/**\" --parallel lint",
    "lint:rust": "cargo clippy --workspace -- -D warnings",
    "lint:dart": "pnpm --filter notaro_mobile lint"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "~5.9.3"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml}": "prettier --write",
    "apps/desktop/**/*.{js,ts,svelte}": [
      "prettier --write",
      "pnpm --filter notaro-desktop exec eslint --fix"
    ],
    "apps/web/**/*.{js,ts,svelte}": [
      "prettier --write",
      "pnpm --filter notaro-web exec eslint --fix"
    ],
    "{packages,apps}/**/*.rs": [
      "sh -c 'cargo fmt --all'",
      "sh -c 'cargo clippy --workspace --fix --allow-dirty --allow-staged -- -D warnings'"
    ],
    "apps/mobile/**/*.dart": [
      "sh -c 'dart format .'",
      "sh -c 'flutter analyze'"
    ]
  }
}
